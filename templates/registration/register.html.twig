{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="w-full mx-auto px-6 py-10">
    <h1 class="text-2xl font-bold text-center text-green-700 mb-6">Créer un compte</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}

    <div class="flex flex-col w-1/3">
        {{ form_label(registrationForm.email, 'Email', { label_attr: { class: ' text-3xl w-1/4 mb-2' } }) }}
        {{ form_widget(registrationForm.email, { attr: { class: "bg-purple-100 p-3 rounded-lg flex items-center space-x-2 border-b" } }) }}
        {{ form_errors(registrationForm.email) }}
    </div>        

        {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' }) }}
        {{ form_row(registrationForm.phone_number) }}
        {{ form_row(registrationForm.roles) }}
        {{ form_row(registrationForm.structure_name) }}

        <div class="flex items-center space-x-2">
            {{ form_row(registrationForm.agreeTerms, { label: false }) }}
            <label for="{{ registrationForm.agreeTerms.vars.id }}" class="text-gray-600">
                J'accepte la <a href="{{ path('app_rgpd') }}" class="text-green-600 hover:underline">politique de confidentialité</a>.
            </label>
        </div>

        <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 rounded-lg">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>

{% endblock %}
