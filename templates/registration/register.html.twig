{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="max-w-xl mx-auto px-6 py-10">
    <h1 class="text-2xl font-bold text-center text-green-700 mb-6">Créer un compte</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}

        <div>
            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-white'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div>
            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-white'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <div>
            {{ form_label(registrationForm.phone_number, null, {'label_attr': {'class': 'block text-sm font-medium text-white'}}) }}
            {{ form_widget(registrationForm.phone_number, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500'}}) }}
            {{ form_errors(registrationForm.phone_number) }}
        </div>

        <div>
            {{ form_label(registrationForm.roles, null, {'label_attr': {'class': 'block text-sm font-medium text-white'}}) }}
            {{ form_widget(registrationForm.roles, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500'}}) }}
            {{ form_errors(registrationForm.roles) }}
        </div>

        <div>
            {{ form_label(registrationForm.structure_name, null, {'label_attr': {'class': 'block text-sm font-medium text-white'}}) }}
            {{ form_widget(registrationForm.structure_name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500'}}) }}
            {{ form_errors(registrationForm.structure_name) }}
        </div>

        <div class="flex items-start space-x-2">
            {{ form_widget(registrationForm.agreeTerms) }}
            <label for="{{ registrationForm.agreeTerms.vars.id }}" class="text-white text-sm">
                J'accepte la <a href="{{ path('app_rgpd') }}" class="text-green-400 hover:underline">politique de confidentialité</a>.
            </label>
        </div>

        <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 rounded-lg">S'inscrire</button>

    {{ form_end(registrationForm) }}
</div>
{% endblock %}
